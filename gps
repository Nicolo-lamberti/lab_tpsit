<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Geolocalizzazione con Leaflet</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        #map { height: 400px; width: 100%; }
    </style>
</head>
<body>
    <div class="container py-5">
        <h1 class="text-center mb-4">La tua posizione</h1>
        <div id="map"></div>
    </div>

    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function mostraMappa() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(function(posizione) {
                    const lat = posizione.coords.latitude;
                    const lon = posizione.coords.longitude;

                    const mappa = L.map('map').setView([lat, lon], 13);

                    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                        attribution: '&copy; OpenStreetMap contributors'
                    }).addTo(mappa);

                    L.marker([lat, lon]).addTo(mappa)
                        .bindPopup("Sei qui!").openPopup();
                }, function(errore) {
                    console.error("Errore nel recupero della posizione:", errore);
                });
            } else {
                console.error("Geolocalizzazione non supportata.");
            }
        }

        window.onload = mostraMappa;
    </script>
</body>
</html>
